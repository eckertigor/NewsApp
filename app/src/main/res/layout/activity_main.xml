<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ekkert.newsapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_update"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/news_title"
            android:layout_alignEnd="@+id/btn_update"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/news_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:layout_alignEnd="@+id/news_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/news_date"
            android:layout_below="@+id/news_text"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/news_text" />

    </LinearLayout>

    <Button
        android:text="@string/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update"
        android:layout_above="@+id/btn_on_bg_update"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_on_bg_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_on_bg_update"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_off_bg_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_off_bg_update"
        android:layout_below="@+id/btn_on_bg_update"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_settings"
        android:layout_below="@+id/btn_off_bg_update"
        android:layout_alignParentStart="true" />

</RelativeLayout>
